<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="TravelRecordApp.App">
    
	<Application.Resources>

        <ResourceDictionary>
            <Color x:Key="blueJC">#3010FF</Color>
            <Color x:Key="whiteJC">#FFFFFF</Color>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource blueJC}"/>
                <Setter Property="TextColor" Value="{StaticResource whiteJC}"/>
            </Style>
            
        </ResourceDictionary>
            
	</Application.Resources>
    
</Application>
